.container {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
}

.pic-review {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.page_ctn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.showwords {
  width: 650rpx;
  font-size: 56rpx;
  position: fixed;
  z-index: 1;
  bottom: 180rpx;
  left: 50%;
  font-weight: bold;
  transform: translateX(-50%);
  line-height: 84rpx;
  text-align: left;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffe21f;
  letter-spacing: 2rpx;
  -webkit-animation: showtext 5s infinite;
  animation: showtext 5s infinite;
  text-shadow: 0 0 8rpx rgba(176, 51, 1, 1),
                 0 0 4rpx rgba(176, 51, 1, 1),
                 0 0 2rpx rgba(176, 51, 1, 1);
}

.zhizhao-0 {
  animation: clip0 5s linear infinite;
}

.zhizhao-1 {
  animation: clip1 5s linear infinite;
}

.zhizhao-2 {
  animation: clip2 5s linear infinite;
}

.zhizhao-3 {
  animation: clip3 5s linear infinite;
}

.zhizhao-4 {
  animation: clip4 5s linear infinite;
}

.zhizhao-5 {
  animation: clip5 5s linear infinite;
}

.zhizhao-6 {
