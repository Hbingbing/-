}

.zhizhao-7 {
  animation: clip7 5s linear infinite;
}

.zhizhao-8 {
  animation: clip8 5s linear infinite;
}

/* 扇形展开 */

@keyframes clip0 {
  0% {
    opacity: 0;
    -webkit-transform: scale(0.95);
    -webkit-clip-path: polygon(50% 50%, 50% 0, 50% 0, 50% 0, 50% 0, 50% 0, 50% 0);
    -webkit-clip-path: polygon(50% 50%, 50% 0, 50% 0, 50% 0, 50% 0, 50% 0, 50% 0);
  }

  5% {
    -webkit-clip-path: polygon(50% 50%, 100% 0, 100% 0, 100% 0, 0 0, 0 0, 0 0);
    clip-path: polygon(50% 50%, 100% 0, 100% 0, 100% 0, 0 0, 0 0, 0 0);
  }

  10% {
    opacity: 1;
    -webkit-clip-path: polygon(50% 50%, 100% 100%, 100% 100%, 100% 0, 0 0, 0 100%, 0 100%);
    clip-path: polygon(50% 50%, 100% 100%, 100% 100%, 100% 0, 0 0, 0 100%, 0 100%);
  }

  15% {
    -webkit-clip-path: polygon(50% 50%, 50% 100%, 100% 100%, 100% 0%, 0 0, 0 100%, 50% 100%);
    clip-path: polygon(50% 50%, 50% 100%, 100% 100%, 100% 0%, 0 0, 0 100%, 50% 100%);
  }

  20% {
    opacity: 1;
    -webkit-transform: scale(1);
  }

  50% {
    opacity: 1;
    -webkit-transform: scale(0.95);
  }

  90% {
    opacity: 1;
    -webkit-transform: scale(1);
  }

  100% {
    opacity: 0;
    -webkit-transform: scale(0.95);
  }
}

